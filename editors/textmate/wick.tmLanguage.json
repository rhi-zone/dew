{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Wick",
  "scopeName": "source.wick",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#constants" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#variables" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.wick",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.conditional.wick",
          "match": "\\b(if|then|else)\\b"
        },
        {
          "name": "keyword.operator.logical.wick",
          "match": "\\b(and|or|not)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.wick",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.wick",
          "match": "\\b\\d+\\.\\d*([eE][+-]?\\d+)?\\b|\\b\\d*\\.\\d+([eE][+-]?\\d+)?\\b|\\b\\d+[eE][+-]?\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.wick",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.wick",
          "match": "<=|>=|==|!=|<|>"
        },
        {
          "name": "keyword.operator.arithmetic.wick",
          "match": "\\+|-|\\*|/|\\^|%"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "meta.function-call.wick",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(\\()",
          "captures": {
            "1": { "name": "entity.name.function.wick" },
            "2": { "name": "punctuation.definition.arguments.begin.wick" }
          }
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.wick",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.definition.arguments.end.wick",
          "match": "\\)"
        },
        {
          "name": "punctuation.separator.arguments.wick",
          "match": ","
        },
        {
          "name": "punctuation.definition.group.begin.wick",
          "match": "\\("
        }
      ]
    }
  }
}
